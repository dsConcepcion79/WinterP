<section class="mosaic mosaic_one">
    <div class="mosaic__inner_items">
        <div class="mosaic__header">
            {% if module.eyebrow %}
                <div class="mosaic__eyebrow">{{ module.eyebrow }}</div>
            {% endif %}
            <h3 class="mosaic__heading">{{ module.heading }}</h3>
            {% if module.button_link %}
                <a
                    class="mosaic__btn"
                    href="{{ module.button_link.url }}"
                    target="{{ module.button_link.target ? module.button_link.target : '_self' }}"
                >
                    <span class="mosaic__btn-label">{{ module.button_link.title }}</span>
                </a>
            {% endif %}
        </div>
		{% set myVal = 0 %}

        {% for image in module.images %}
		
			{% set myVal = myVal + 1 %}
			
			{% if myVal == 2 %}
				<div class="mosaic__single_item">
				<div class=" mosaic_item{{ myVal }} mosaic_item_middle">
			{% elseif myVal == 3 %}
				<div class=" mosaic_item{{ myVal }} mosaic_item_middle">
			{% elseif myVal == 4 %}
				</div>
				<div class=" mosaic__single_item mosaic_item{{ myVal }}">
			{% else %}
				<div class=" mosaic__single_item mosaic_item{{ myVal }}">
			{% endif %}
            
                {% if image.image %}
                    <div class="mosaic__image_main">
                        <img
                            class="mosaic__img"
                            src="{{ Image(image.image).src('large') }}"
                            srcset="{{ Image(image.image).srcset }}"
                            alt="{{ Image(image.image).alt }}"
                            data-object-fit
                        />
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>
<style type="text/css">
.mosaic__inner_items {
    max-width: 1100px;
    margin: 0 auto;
}
.mosaic_one .mosaic__image_main {
    overflow: hidden;
    position: relative;
    padding-bottom: unset;
    width: 100%;
    height: 100%;
}
.mosaic_one .mosaic__header {
    display: none;
}

.mosaic_one .mosaic_item2.mosaic_item_middle {
    position: absolute;
    width: 100%;
    height: calc(100% - 50px);
    top: -150px;
}
.mosaic_one .mosaic_item3.mosaic_item_middle {
    position: absolute;
    width: 100%;
    height: calc(100% - 50px);
    bottom: -150px;
}
.mosaic_one .mosaic__inner_items {
    width: 100%;
    padding-top: 50px;
    padding-bottom: 50px;
}
.mosaic_one .mosaic__single_item {
    width: 33% !important;
    float: left;
    height: 400px;
    position: relative;
}
.mosaic_one .mosaic__image_main img {
    padding: 10px !important;
}
.mosaic_one section.mosaic.mosaic_one {
    padding-bottom: 200px;
    padding-top: 200px;
}
@media only screen and (max-width:767px){
.mosaic_one .mosaic__single_item {
    width: 100% !important;
    float: none;
    height: 300px;
    position: relative;
    margin-bottom: 20px;
    overflow: hidden;
}
.mosaic_one .mosaic_item3.mosaic_item_middle {
    height: 300px !important;
    position: relative;
    width: 100%;
	bottom: unset;
}
.mosaic_one .mosaic_item2.mosaic_item_middle {
    height: 300px !important;
    position: relative;
    width: 100%;
	top: unset;
}
.mosaic_one .mosaic__single_item:nth-child(3) {
    height: 600px;
}
.mosaic_one section.mosaic.mosaic_one {
    padding-bottom: 100px;
    padding-top: 100px;
}
}
</style>

