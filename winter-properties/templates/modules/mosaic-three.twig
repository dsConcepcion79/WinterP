<section class="mosaic mosaic_three">
    <div class="mosaic__inner_items">
        <!-- <div class="mosaic__header">
            {% if module.eyebrow %}
                <div class="mosaic__eyebrow">{{ module.eyebrow }}</div>
            {% endif %}
            <h3 class="mosaic__heading">{{ module.heading }}</h3>
            {% if module.button_link %}
                <a
                    class="mosaic__btn"
                    href="{{ module.button_link.url }}"
                    target="{{ module.button_link.target ? module.button_link.target : '_self' }}"
                >
                    <span class="mosaic__btn-label">{{ module.button_link.title }}</span>
                </a>
            {% endif %}
        </div>
		-->
		{% set myVal = 0 %}

        {% for image in module.images %}
		
			{% set myVal = myVal + 1 %}
			
				<div class="mosaic_three__single_item mosaic_item{{ myVal }} mosaic_three_item_middle">
            
                {% if image.image %}
                    <div class="mosaic_three__image_main">
                        <img
                            class="mosaic_three_img"
                            src="{{ Image(image.image).src('large') }}"
                            srcset="{{ Image(image.image).srcset }}"
                            alt="{{ Image(image.image).alt }}"
                            data-object-fit
                        />
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>
<style type="text/css">
.mosaic__inner_items {
    max-width: 1100px;
    margin: 0 auto;
}
.mosaic_three img.mosaic_three_img {
    max-width: 100%;
	height: 100%;
    left: 0;
    -o-object-fit: cover;
    object-fit: cover;
    position: absolute !important;
    top: 0;
    width: 100%;
}
.mosaic_three .mosaic_three__single_item {
    width: calc(50% - 40px);
    float: left;
    margin: 20px;
}
.mosaic_three .mosaic_three__image_main {
    overflow: visible;
    position: relative;
    padding-bottom: unset;
    width: 100%;
    height: 100%;
    min-height: 400px;
    text-align: center;
}
.mosaic_three .mosaic__inner_items {
    width: 100%;
    padding-top: 50px;
    padding-bottom: 50px;
}
.mosaic_three .mosaic_three__single_item.mosaic_item1.mosaic_three_item_middle img {
    margin-top: -100px;
}
.mosaic_three .mosaic_three__single_item.mosaic_item4.mosaic_three_item_middle img {
    margin-top: 100px;
}
@media only screen and (max-width:767px){
.mosaic_three .mosaic_three__single_item {
    width: 100%;
    float: none;
    margin: 10px;
}
}
</style>

