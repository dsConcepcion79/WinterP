        <button class="spotlight__nav-btn spotlight__prev">
            <span class="visually-hidden">Previous Slide</span>
        </button>
        <button class="spotlight__nav-btn spotlight__next">
            <span class="visually-hidden">Next Slide</span>
        </button>
    </div>
    -->
	{% if module.see_all_url %}
	<div class="spotlight_see_all">
		<a class="see_all_url press__link" href="{{ module.see_all_url }}">See all <span class="arrow_hover">&#8594;</span></a>
	</div>
	{% endif %}
	<style type="text/css">
.spotlight_see_all {
    width: 100%;
    max-width: 1264px;
    margin: 20px auto;
    margin-top: 50px;
    margin-bottom: 80px;
    overflow: hidden;
    text-align:center;
}
.spotlight_see_all a.see_all_url {
    float: unset;
    color: #000 !important;
    font-size: 24px;
    line-height: 34px;
}
.spotlight_grid .spotlight__slides-wrapper {
	flex-wrap: wrap;
}
.spotlight_grid .spotlight__slide {
    flex: 1 1 31%;
}
.spotlight_grid .spotlight__slide-title {
    font-size: 26px;
    line-height: 32px;
}
.spotlight_grid .spotlight__inner {
    max-width: 1264px;
    width: 100%;
}
.spotlight_grid .spotlight__inner {
    max-width: 1264px;
    width: 100%;
    margin-top: 80px;
    margin-bottom: 80px;
    margin-left: auto;
    margin-right: auto;
}
.spotlight_grid .spotlight__content {
    margin-bottom: 40px;
}
.spotlight_grid .spotlight__slide {
    flex: 1 1 calc(33.33% - 20px);
    background: #ddd;
    margin: 10px;
}
.spotlight_grid .spotlight__slide-content {
    opacity: 1;
}
.spotlight_grid header.spotlight__header {
    padding-left: 20px;
}
.spotlight_grid figcaption.spotlight__slide-caption {
    display: none;
}

@media only screen and (min-width:768px) and (max-width:1000px){
.spotlight_grid .spotlight__slide {
    flex: 1 1 calc(50% - 20px);
    margin: 10px;
}
}
@media only screen and (max-width:767px){
.spotlight_grid .spotlight__slide {
    flex: 1 1 calc(100% - 20px);
    margin: 10px;
    padding: 10px;
}
}
    </style>
</section>