{% if pagination.pages is not empty %}
    <nav class="pagination">
        <ul class="pagination__list" role="presentation">
            <li class="pagination__list-item pagination__list-item--prev">
                {% if pagination.prev %}
                    <a class="pagination__link" href="{{ pagination.prev.link }}">Prev</a>
                {% else %}
                    <span class="pagination__link pagination__link--disabled">Prev</span>
                {% endif %}
            </li>

            {% for page in pagination.pages %}
                <li class="pagination__list-item">
                    {% if page.link %}
                        <a class="pagination__link {{ page.class }}" href="{{ page.link }}">
                            {{ page.title }}
                        </a>
                    {% else %}
                        <span class="pagination__link pagination__link--current {{ page.class }}">
                            {{ page.title }}
                        </span>
                    {% endif %}
                </li>
            {% endfor %}

            <li class="pagination__list-item pagination__list-item--next">
                {% if pagination.next %}
                    <a class="pagination__link" href="{{ pagination.next.link }}">Next</a>
                {% else %}
                    <span class="pagination__link pagination__link--disabled">Next</span>
                {% endif %}
            </li>
        </ul>
    </nav>
{% endif %}
